{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "@moving/workspace",
  "version": "0.1.3",
  "description": "TypeScript utilities for interacting with the Move language and Move blockchains.",
  "main": "index.js",
  "repository": "git@github.com:movershq/moving-kit.git",
  "author": "Ian Macalinao <github@igm.pub>",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.3",
    "@saberhq/eslint-config": "^1.13.6",
    "@saberhq/tsconfig": "^1.13.6",
    "@types/bn.js": "^5.1.0",
    "@types/eslint": "^8.4.2",
    "@types/jest": "^27.5.1",
    "@types/prettier": "^2.6.1",
    "@yarnpkg/doctor": "^3.1.3",
    "bn.js": "^5.2.0",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-runtime": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "build": "yarn workspaces foreach --exclude @moving/workspace -pt run build",
    "publish:all": "yarn workspaces foreach --exclude @moving/workspace -pt npm publish",
    "bump": "yarn workspaces foreach -t version",
    "test": "jest",
    "lint": "eslint . --cache",
    "lint:ci": "eslint . --max-warnings=0",
    "typecheck": "tsc",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  }
}
